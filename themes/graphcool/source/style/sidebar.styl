#sidebar
  font-family 'ProximaNova-Semibold'
  border-right 1px solid #eee
  font-size 16px
  line-height 1.1em

  li
    margin-bottom .6em
    padding-left  0

  a
    color #444
    padding-left 22px
    &.current, &:hover
      color #36ad64
    &.H2
      font-weight bold

  > ul > li
    margin-bottom 30px
    border-top 1px solid #eee

    &:first-child
      border-top 0

  .categories > li > p
    text-transform uppercase
    padding-top 31px
    padding-left 22px
    margin-bottom 1em
    color #999
    font-size 0.8em
    margin-left 7px

  > ul > li > ul > li
    margin-left 7px

#sidebar-mobile
  display none
  margin-bottom 20px
  .search-box
    width 200px
    margin-bottom 20px
