<ul class="categories">
  <% _.each(config.sidebar_categories, function(pages, category) { %>
    <li>
      <% if (category !== 'null') { %>
        <p><%- category %></p>
      <% } %>
      <ul class="menu-root">
        <% pages.forEach(function(path) { %>
          <% p = site.pages.findOne({path: path + '/index.html'}); %>
          <% url = relative_url(page.path, p.path).replace('/index.html', '/'); %>
          <li>
            <a href="<%- url %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %>">
              <%- p.title %>
            </a>
          </li>
        <% }); %>
      </ul>
    </li>
  <% }); %>
</ul>
